    line_l := line.new(bar_index[rightBars], low[rightBars], bar_index[rightBars], low[rightBars])
    lbl_l  := label.new(na, low[rightBars], "â¬¥", color = #00000000, textcolor = col_dn, size = size.large)

// Handle crossunders for pivot lows

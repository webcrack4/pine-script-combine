var table vp_logo = table.new(position.bottom_right, 1, 1)
if barstate.islast
    table.cell(vp_logo, 0, 0, 'â˜¼â˜¾  ', text_size = size.normal, text_color = color.teal)

//-----------------------------------------------------------------------------}